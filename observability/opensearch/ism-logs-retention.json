{
  "policy": {
    "policy_id": "logs-retention-7-days",
    "description": "Delete application logs after 7 days",
    "default_state": "hot",
    "states": [
      {
        "name": "hot",
        "actions": [],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "7d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ]
      }
    ],
    "ism_template": [
      {
        "index_patterns": [
          "logs-app-*"
        ],
        "priority": 100
      }
    ]
  }
}